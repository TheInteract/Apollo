@require '../nt-design/colorsets'

$start-color = rgba(c-red300, 0.5)
$end-color = c-jewel200

.nt
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  overflow hidden
  cursor grab

  &:active
    cursor grabbing

  &__gradientStart
    stop-color $start-color

  &__gradientEnd
    stop-color $end-color