@require '../nt-design/colorsets'

.nt
  &__gradientStart
    stop-color c-gray600

  &__gradientEnd
    stop-color c-red300

  &__path
    stroke highlight
    stroke-width 2px
    fill none

  &__line
    transition opacity 0.1s ease
    fill none
    stroke-width 1

    &.\\--not-selected
      opacity 0.1

  &__arrowHead
    fill c-gray600

  &__node
    text
      fill c-gray600

    rect
      cursor pointer
      transition fill 0.1s ease
      fill c-red400

    &.\\--not-selected
      rect
        fill c-yellow400