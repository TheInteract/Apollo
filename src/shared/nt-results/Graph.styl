@require '../nt-design/colorsets'

.nt
  &__gradientStart
    stop-color c-gray600

  &__gradientEnd
    stop-color c-red300

  &__path
    stroke highlight
    stroke-width 2px
    fill none

  &__line
    fill none

    &.\\--not-selected
      opacity 0.1

  &__arrowHead
    fill c-gray600

  &__node
    text
      fill c-gray300
  
    rect
      fill c-red400
      transition fill 0.2s ease

    &.\\--not-selected
      rect
        fill c-yellow400