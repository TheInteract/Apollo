@require '../nt-design/colorsets'

.nt
  &__gradientStart
    stop-color c-red300

  &__gradientEnd
    stop-color c-gray700

  &__path
    stroke highlight
    stroke-width 2px
    fill none

  &__line
    fill none

    &.\\--not-selected
      opacity 0.15

  &__arrowHead
    fill c-gray700

  &__node
    rect
      fill c-red500

    &.\\--not-selected
      rect
        fill c-yellow500