@require '../nt-design/colorsets'

.nt
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  // background-color c-gray700
  cursor grab

  &:active
    cursor grabbing

  &__loadingState
    display flex
    justify-content center
    padding 15px 0
    width 100%

  &__menu
    position absolute
    top 30px
    right 20px

  &__menuItem
    margin 5px 0
    padding 5px 20px
    background-color white
    cursor pointer

    &:hover
      background-color c-yellow400

  &__pathSelector
    position absolute
    top 30px
    right 140px

  &__path
    margin 5px 0
    padding 5px 20px
    background-color c-yellow400
    cursor pointer

    &:hover
      color c-gray50
      background-color c-gray600
