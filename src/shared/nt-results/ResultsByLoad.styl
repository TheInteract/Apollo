@require '../nt-design/colorsets'

.nt
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  overflow hidden

  &__linkTypeSelector
    position absolute
    right 30px
    bottom 30px
    z-index 2
    display flex
    justify-content center
    align-items center
    overflow hidden
    width 50px
    height 50px
    border-radius 50%
    background-color c-teal100
    color c-teal500
    cursor pointer

    &:hover
      background-color c-teal75
      color c-teal400

  &__pathSelector
    position absolute
    top 80px
    right 13px
    z-index 1
    overflow hidden
    overflow-y auto
    padding-right 12px
    max-height calc(100% - 180px)
    width 55px
    text-align center
    white-space pre-wrap
    font-weight 600
    font-size 14px
    color c-teal500

  &__pathSelectorHeader
    margin-bottom 10px

  &__path
    overflow hidden
    margin-bottom 2px
    padding 5px 20px
    border-bottom 2px solid c-teal500
    background-color c-teal400
    color c-gray50
    text-align center
    text-overflow ellipsis
    font-size 12px
    cursor pointer

    &:hover
      background-color c-teal500

  &__infoPanel
    position absolute
    right 0
    bottom 0
    left 0
    z-index 2
    height 200px
    background-color white
    box-shadow 0 -2px 20px 0 rgba(c-gray500, 0.1)
