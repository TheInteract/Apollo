@require '../nt-design/colorsets'

.nt
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  overflow hidden

  &__loadingState
    display flex
    justify-content center
    padding 15px 0
    width 100%

    &:hover
      background-color c-teal400

  &__pathSelector
    position absolute
    top 30px
    right 20px
    bottom 30px
    overflow-y auto
    padding-right 15px
    pointer-events none
    z-index 1

  &__path
    overflow hidden
    padding 5px 20px
    border-bottom 4px solid c-teal500
    background-color c-teal400
    color c-gray50
    text-overflow ellipsis
    font-size 12px
    cursor pointer
    pointer-events all

    &:hover
      background-color c-teal500
