@require '../nt-design/colorsets'

.nt
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  overflow hidden

  &__loadingState
    display flex
    justify-content center
    padding 15px 0
    width 100%

    &:hover
      background-color c-teal400

  &__pathSelector
    position absolute
    top 80px
    right 10px
    max-height calc(100% - 110px)
    z-index 1
    overflow-y auto
    padding-right 12px

  &__path
    overflow hidden
    padding 5px 20px
    width 30px
    border-bottom 4px solid c-teal500
    background-color c-teal400
    color c-gray50
    text-overflow ellipsis
    font-size 12px
    cursor pointer

    &:hover
      background-color c-teal500
