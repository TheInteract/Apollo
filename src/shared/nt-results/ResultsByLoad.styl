@require '../nt-design/colorsets'

.nt
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  background-color c-gray700

  &__loadingState
    display flex
    justify-content center
    padding 15px 0
    width 100%

  &__menu
    position absolute
    top 25%
    right 20px
    min-width 60px
    min-height 200px
    transform translateY(-50%)

  &__menuItem
    margin 5px 0
    padding 5px 20px
    background-color white