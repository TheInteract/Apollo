@require '../nt-design/colorsets'

.nt
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  overflow hidden
  // background-color c-gray700
  cursor grab

  &:active
    cursor grabbing

  &__loadingState
    display flex
    justify-content center
    padding 15px 0
    width 100%

  &__menu
    position absolute
    top 30px
    right 20px

  &__menuItem
    margin 5px 0
    padding 5px 20px
    background-color white
    cursor pointer

    &:hover
      background-color c-teal400

  &__pathSelector
    position absolute
    top 30px
    right 140px
    bottom 30px
    overflow-y auto
    padding-right 15px

  &__path
    overflow hidden
    margin 5px 0
    padding 5px 20px
    width 80px
    background-color c-teal400
    color c-gray50
    text-overflow ellipsis
    font-size 12px
    cursor pointer

    &:hover
      background-color c-gray600
