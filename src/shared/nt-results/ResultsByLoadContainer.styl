@require '../nt-design/colorsets'

.nt
  &__A, &__B
    position absolute
    top 0
    bottom 0

  &__A
    left 0
    width 50%

  &__B
    right 0
    left 50%

  &__divider
    position absolute
    fill c-gray200
    background-color c-gray25
    top 0
    left 0
    bottom 0
    width 10px
    margin-left -5px
    z-index 2
    cursor grabbing
    border-left 1px solid c-gray50
    border-right 1px solid c-gray50