@require '../nt-design/colorsets'

$sidebar-size = 80px

.nt
  &__sidebar
    position absolute
    top 0
    bottom 0
    left 0
    z-index 2
    overflow-y auto
    padding 90px 0
    width $sidebar-size
    background-color c-gray800
    color c-gray300

  &__link
    overflow-x hidden
    box-sizing border-box
    padding 10px 15px
    width 100%
    text-overflow ellipsis
    transition background-color 0.1s ease color 0.1s ease

    &:hover
      color c-gray200

  &__activeLink > &__link
    background-color c-gray850
    color c-gray200

  &__content
    position absolute
    top 0
    right 0
    bottom 0
    left $sidebar-size
    z-index 1

  &__A, &__B
    position absolute
    top 0
    bottom 0
    width 50%

  &__A
    left 0

  &__B
    right 0