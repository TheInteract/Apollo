@require '../nt-design/colorsets'

$nav-size = 80px

.nt
  &__nav
    position absolute
    top 0
    right 0
    left 0
    z-index 2
    display flex
    overflow hidden
    box-sizing border-box
    padding 0 20px 5px
    height $nav-size
    background rgba(white, 0.5)
    background linear-gradient(to bottom, rgba(white, 0.9), transparent)
    color c-gray500

  &__content
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    z-index 1

  &__link, &__filter
    display flex
    justify-content center
    align-items center
    overflow-x hidden
    box-sizing border-box
    padding 10px 15px
    min-width 80px
    height 100%
    color c-gray500
    font-size 14px
    line-height 14px
    cursor pointer
    transition background-color 0.1s ease color 0.1s ease

    &:hover
      color c-gray700

    > i
      margin-right 5px
      font-size 16px

  &__activeLink > &__link, &__filter.\--active
    color c-gray700
    font-weight 600

  &__A, &__B
    position absolute
    top 0
    bottom 0
    width 50%

  &__A
    left 0

  &__B
    right 0