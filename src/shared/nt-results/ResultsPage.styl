@require '../nt-design/colorsets'

$sidebar-size = 200px

.nt
  &__sidebar
    position absolute
    top 0
    bottom 0
    left 0
    z-index 1
    overflow-y auto
    padding 90px 0
    width $sidebar-size
    background-color c-gray100
    box-shadow 1px 0 5px 0 rgba(c-gray200, 0.35)

  &__link
    overflow-x hidden
    box-sizing border-box
    padding 10px 15px
    width 100%
    text-overflow ellipsis
    transition background-color 0.1s ease color 0.1s ease

    &:hover
      background-color c-gray150

  &__activeLink > &__link
    background-color c-gray200

  &__content
    position absolute
    top 0
    right 0
    bottom 0
    left $sidebar-size