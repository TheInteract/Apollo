@require '../nt-design/colorsets'

$nav-size = 80px

.nt
  &__nav
    position absolute
    top 0
    right 0
    left 0
    z-index 2
    display flex
    overflow hidden
    box-sizing border-box
    padding 0 20px 5px
    height $nav-size
    background rgba(white, 0.5)
    background linear-gradient(to bottom, rgba(white, 0.9), transparent)
    color c-gray500
    pointer-events none

  &__content
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    z-index 1

  &__link, &__filter
    display flex
    justify-content center
    align-items center
    overflow-x hidden
    box-sizing border-box
    padding 10px 15px
    height 100%
    color c-gray700
    font-size 14px
    line-height 14px
    cursor pointer
    transition background-color 0.1s ease color 0.1s ease
    pointer-events all

    &:hover
      color c-teal500

    > i
      margin-right 5px
      font-size 16px

  &__activeLink > &__link, &__filter.\--active
    color c-teal500
    font-weight 600

  &__divider
    box-sizing border-box
    margin 0 20px
    width 1px
    height 100%
    background rgba(c-gray900, 0.2)
    background linear-gradient(to top, transparent, c-gray25, transparent)
    z-index 3

  &__A, &__B
    position absolute
    top 0
    bottom 0
    width 50%

  &__A
    left 0

  &__B
    right 0