@require '../nt-design/colorsets'

$nav-size = 50px

.nt
  &__nav
    position absolute
    top 0
    right 0
    left 0
    z-index 2
    display flex
    overflow hidden
    height $nav-size
    border-bottom 1px solid rgba(white, 0.6)
    background linear-gradient(to bottom, rgba(white, 0.9), rgba(white, 0.5))
    background-color rgba(white, 0.5)
    color c-gray500
    padding 0 20px

  &__content
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    z-index 1

  &__link
    display flex
    justify-content center
    align-items center
    overflow-x hidden
    box-sizing border-box
    padding 10px 15px
    height 100%
    min-width 80px
    transition background-color 0.1s ease color 0.1s ease
    font-size 14px
    line-height 14px

    &:hover
      color c-gray600

    > i
      font-size 16px
      margin-right 5px

  &__activeLink > &__link
    color c-gray600
    font-weight 600

  &__A, &__B
    position absolute
    top 0
    bottom 0
    width 50%

  &__A
    left 0

  &__B
    right 0