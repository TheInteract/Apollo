@require '../nt-design/colorsets'

.nt
  box-sizing border-box
  max-width 800px
  border 2px dashed c-gray200
  border-radius 5px
  background-color white

  &__proportion
    display flex
    justify-content space-between
    align-items center
    margin 0 -5px
    box-shadow 0 1px 3px 0 rgba(c-gray600, 0.35)
    font-size 30px
    line-height 30px

  &__name
    padding 10px 25px
    color c-gray500
    font-weight 600
    font-size 16px

    input
      margin-left 10px
      padding 5px 10px
      font-size 16px

  &__A, &__B
    flex 1 1 auto
    padding 10px 25px

    input
      margin-left 10px
      padding 2px 10px
      width 75px
      font-size 30px
      line-height 30px

  &__A
    background-color c-red400
    color white

  &__B
    background-color c-yellow400
    color c-gray600

  &__submit
    padding 10px 25px

    input, button
      padding 10px 20px
      background-color white
      color c-gray500
      font-weight 600
      font-size 16px

      &:hover
        border-color c-gray300

  input, button
    position relative
    border 2px solid c-gray200
    border-radius 4px

    &:focus
      border-color c-gray300