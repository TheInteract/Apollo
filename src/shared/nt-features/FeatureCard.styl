@require '../nt-design/colorsets'

.nt
  overflow hidden
  box-sizing border-box
  margin 20px 1px
  max-width 800px
  border-radius 5px
  background-color white
  box-shadow 0 2px 3px 0 rgba(c-gray600, 0.35)

  &__header
    display flex
    justify-content space-between
    align-items center
    padding 10px 25px

  &__name
    font-size 18px

  &__closeConfirmation
    display flex
    align-items center

    > *
      margin-left 10px

  &__closeButton
    box-sizing border-box
    padding 5px 10px
    border 2px solid c-gray300
    border-radius 3px
    color c-gray400
    cursor pointer

    &:hover
      border-color c-red200
      color c-red300

  &__proportion
    display flex
    justify-content space-between
    align-items center

  &__A, &__B
    flex 1 1 auto
    padding 10px 25px
    color white

  &__A
    background-color c-red400

  &__B
    background-color c-jewel300

  &__actual
    font-size 16px

  &__expected
    font-size 30px

  &.\\--closed
    border 1px solid c-gray200
    background-color transparent
    box-shadow none

  &.\\--closed &
    &__header
      color c-gray300

    &__A, &__B
      border-top 1px solid c-gray200
      background-color transparent
      color c-gray300