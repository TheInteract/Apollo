@require '../nt-design/colorsets'

.nt
  overflow hidden
  margin 20px 1px
  border 1px solid c-gray200
  border-radius 5px

  &__header
    display flex
    justify-content space-between
    align-items center
    padding 10px 25px

  &__name
    font-size 18px

  &__closeConfirmation
    display flex
    align-items center

    > *
      margin-left 10px

  &__closeButton
    box-sizing border-box
    padding 5px 10px
    border 2px solid c-gray300
    border-radius 3px
    color c-gray400
    cursor pointer

    &:hover
      border-color c-red200
      color c-red300

  &__proportion
    display flex
    justify-content space-between
    align-items center

  &__A, &__B
    flex 1 1 auto
    padding 10px 25px

  &__A
    background-color c-red400
    color white

  &__B
    background-color c-yellow400
    color c-gray600

  &__actual
    font-size 16px

  &__expected
    font-size 30px

  &.\\--closed
    border-color c-gray100

  &.\\--closed &
    &__header
      color c-gray200

    &__A, &__B
      border-top 1px solid c-gray100
      background-color transparent
      color c-gray200
