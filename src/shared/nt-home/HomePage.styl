@require '../nt-design/colorsets.styl'

@font-face
  font-weight normal
  font-style normal
  font-family 'Luna'
  src url('../../../assets/fonts/Luna.ttf.woff') format('woff'), url('../../../assets/fonts/Luna.ttf.svg#Luna') format('svg'), url('../../../assets/fonts/Luna.ttf.eot'), url('../../../assets/fonts/Luna.ttf.eot?#iefix') format('embedded-opentype')

.nt
  position absolute
  top 0
  right 0
  bottom 0
  left 0

  &__title
    position relative
    z-index 1
    padding 50px
    color white
    font-size 70px
    font-family 'Luna'

  &__subtitle
    position absolute
    right 160px
    bottom -10px
    color m-teal0
    font-size 50px

  &__description
    padding-top 30px
    padding-left 100px
    width 500px

  &__item
    display flex
    margin-top 10px

    >i
      width 50px
      color m-jewel8
      text-align center
      font-size 40px

  &__content
    margin 0 10px

    >h1
      margin 0
      text-transform uppercase

    >span
      font-size 20px

  &__right
    text-align right

  &__curve
    position absolute
    top 0
    width 100%
    height 100%