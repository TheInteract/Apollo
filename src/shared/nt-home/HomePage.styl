@require '../nt-design/colorsets.styl'

@font-face
  font-weight normal
  font-style normal
  font-family 'Luna'
  src url('../../../assets/fonts/Luna.ttf.woff') format('woff'), url('../../../assets/fonts/Luna.ttf.svg#Luna') format('svg'), url('../../../assets/fonts/Luna.ttf.eot'), url('../../../assets/fonts/Luna.ttf.eot?#iefix') format('embedded-opentype')

.nt
  position absolute
  top 0
  right 0
  bottom 0
  left 0

  &__title
    font-family 'Luna'
    position relative
    z-index 1
    padding 50px
    color white
    font-size 70px

  &__subtitle
    position absolute
    right 160px
    bottom -10px
    color m-teal0
    font-size 50px

  &__right
    text-align right

  &__curve
    position absolute
    top 0
    width 100%
    height 100%