@require('../nt-design/colorsets')

$l-size = 5em
$l-border = 5px
$l-spin-time = 1000ms

@keyframes spinAround 
  from 
      transform rotate(0deg)
  to
      transform rotate(360deg)

.loader
  position absolute
  top 0
  left 0
  display flex
  flex-direction row
  justify-content center
  align-items center
  height 100%
  width 100%

  &:before
    display block
    margin-top -5em
    height $l-size
    width $l-size
    border $l-border solid c-gray50
    border-top $l-border solid c-gray500
    border-radius 50%
    content ""
    animation spinAround $l-spin-time infinite linear
  
  p
    position absolute
    font-size 2rem