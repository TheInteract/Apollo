@require('../nt-design/colorsets')

$side-bar-size = 200px
$horizontal-padding = 30px
$vertical-padding = 15px

.layout
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  overflow hidden

.sidebar, .content
  position absolute
  top 0
  bottom 0
  overflow-y auto
  box-sizing border-box
  padding $vertical-padding $horizontal-padding

.sidebar
  left 0
  z-index 1
  width $side-bar-size
  background-color c-gray600
  color white

.content
  right 0
  left $side-bar-size
  background-color white
