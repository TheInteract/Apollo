@require '../nt-design/colorsets'
@require '../nt-styles/global'

$side-bar-size = 200px
$horizontal-padding = 30px
$vertical-padding = 15px

.layout
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  overflow hidden

.sidebar, .content
  position absolute
  top 0
  bottom 0
  overflow-x hidden
  overflow-y auto
  box-sizing border-box

.sidebar
  left 0
  z-index 1
  width $side-bar-size
  background-color c-gray600
  box-shadow 1px 0 8px 0 rgba(c-gray600, 0.5)
  color c-gray200

.content
  right 0
  left $side-bar-size
  display flex
  justify-content center
  padding $vertical-padding $horizontal-padding
  background-color c-gray50

.name
  margin-bottom 15px
  padding 25px 15px
  border-bottom 2px dashed c-gray500
  color white
  font-size 20px

.link
  box-sizing border-box
  padding 10px 15px
  width 100%

  background-color, &:hover
    background-color c-gray550
    color white

.activeLink > .link
  background-color c-red400
  color white
