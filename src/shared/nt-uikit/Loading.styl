@require('../nt-design/colorsets')

$l-size = 50px
$l-border = 5px
$l-spin-time = 1000ms

@keyframes spinAround
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)

.nt
  display flex
  flex-direction column
  align-items center
  padding 10px 25px
  font-size 14px

  &__loading:before
    display block
    margin-bottom 20px
    width $l-size
    height $l-size
    border $l-border solid c-gray50
    border-top $l-border solid c-gray500
    border-radius 50%
    content ''
    animation spinAround $l-spin-time infinite linear
