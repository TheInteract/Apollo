@require '../nt-design/colorsets'

$size = 80px
$small-size = 18px
$border-size = 5px
$small-border-size = 3px
$duration = 800ms

@keyframes spinAround
  from
    transform rotate(0deg)

  to
    transform rotate(360deg)

.nt
  font-size 14px

  &__loading
    &:before
      display block
      margin 10px
      width $size
      height $size
      border-top $border-size + 20 solid c-jewel300
      border-right $border-size + 8 solid c-red300
      border-left $border-size + 8 solid c-teal300
      border-radius 50%
      content ''
      animation spinAround $duration infinite linear
      pointer-events none

  &.\\--small &
    &__loading:before
      margin 0
      width $small-size
      height $small-size
      border-width $small-border-size

  &__message
    margin-top 20px